{%- if item.image -%}
  <div class='cart-notification-product__image global-media-settings'>
    <img
      src='{{ item.image | image_url: width: 140 }}'
      alt='{{ item.image.alt | escape }}'
      width='70'
      height='{{ 70 | divided_by: item.image.aspect_ratio | ceil }}'
      loading='lazy'
    >
  </div>
{%- endif -%}
<div>
  <h3 class='cart-notification-product__name h4'>{{ item.product.title | escape }}</h3>
  <dl>
    {%- if item.product.has_only_default_variant == false or item.properties.size != 0 -%}
      {%- if item.product.has_only_default_variant == false -%}
        {%- for option in item.options_with_values -%}
          <div class='product-option'>
            <dt>{{ option.name }}:</dt>
            <dd>{{ option.value }}</dd>
          </div>
        {%- endfor -%}
      {%- endif -%}

      {%- for property in item.properties -%}
        <div
          class='product-option'
          {% if property.first == '_Engraving' %}
            data-engraving
          {% endif %}
        >
          <dt>{{ property.first | remove: '_' }}:</dt>
          <dd>{{ property.last }}</dd>
        </div>
      {%- endfor -%}
    {%- endif -%}
  </dl>
</div>
